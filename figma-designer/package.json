{
  "name": "figma-designer",
  "version": "1.0.0",
  "description": "Figma plugin for creating component sets from React components and design tokens",
  "type": "module",
  "scripts": {
    "dev": "npm run build:ui -- --watch & npm run build:plugin -- --watch",
    "build": "npm run build:plugin && npm run build:ui",
    "build:plugin": "vite build --config vite.plugin.config.ts",
    "build:ui": "vite build --config vite.ui.config.ts",
    "parse": "tsx scripts/parse-component.ts",
    "parse:button": "tsx scripts/parse-component.ts ../components/Button"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.89.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
